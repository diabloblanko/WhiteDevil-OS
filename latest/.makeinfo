#!/bin/sh
get_network=$(cat ./etc/.netconfig)
get_hostname=$(cat ./etc/hostname)
get_rootname=$(cat ./etc/admin)
get_shellprompt=$(cat ./etc/shellprompt)

file="userinfo.txt"

useros="Gib OS local.pub-0.1"
touch $file
echo -e "Net: $get_network;\nHost: $get_hostname;\nRoot: $get_rootname\nPrompt: '$get_shellprompt'\nOS: $useros" > $file
